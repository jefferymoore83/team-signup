<% if (team && team.name && team.slots > 0) { %>
    <li id="<%= team.slug %>">
        <h2><%= team.name %></h2>
        <h3>Led by <%= team.leader %></h3>
        <p><%= team.description %></p>

            <form action="/api/signup" method="GET" data-form-name="team-signup" data-form-slug="<%= team.slug %>" class="<%= (team.members.length < team.slots) ? '' : 'is-hidden' %>">
                <input type="hidden" name="guid" value="<%= user.guid %>" />
                <input type="hidden" name="team_id" value="<%= team.id %>" / >
                <input name="full_name" placeholder="Enter full name" >
                <input type="submit" value="Sign Me Up!" />
            </form>

        <% if (team.members.length > 0) { %>
            <h3>Current Members:</h3>
            <ul>
                <% team.members.forEach(function(member){ %>
                    <li>
                        <%= member.member_name %>
                        <% if (user.is_admin) { %>
                            <a href="/api/admin/remove_member?guid=<%= member.member_guid %>" data-api-action>Remove from team</a>
                        <% } %>
                    </li>
                <% }); %>
            </ul>
        <% } %>
        
    </li>
<% } %>